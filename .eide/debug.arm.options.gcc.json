{
    "version": 4,
    "beforeBuildTasks": [],
    "afterBuildTasks": [],
    "global": {
        "$float-abi-type": "hard",
        "output-debug-info": "enable",
        "misc-control": "-fno-exceptions -pipe"
    },
    "c/cpp-compiler": {
        "language-c": "c17",
        "language-cpp": "gnu++17",
        "optimization": "level-debug",
        "warnings": "all-warnings",
        "one-elf-section-per-function": true,
        "one-elf-section-per-data": true,
        "CXX_FLAGS": "-fno-rtti"
    },
    "asm-compiler": {
        "ASM_FLAGS": "-ffunction-sections -fdata-sections"
    },
    "linker": {
        "output-format": "elf",
        "remove-unused-input-sections": true,
        "LIB_FLAGS": "-lm -lstdc++"
    }
}